# ============================================================
# One Piece TCG PH — Environment Variables
# ============================================================
# Copy this file to .env.local and fill in your values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="One Piece TCG PH"

# Platform escrow account details (shown to buyers for manual transfer)
NEXT_PUBLIC_GCASH_NUMBER=09XX-XXX-XXXX
NEXT_PUBLIC_GCASH_NAME="OP TCG PH Escrow"
NEXT_PUBLIC_MAYA_NUMBER=09XX-XXX-XXXX
NEXT_PUBLIC_MAYA_NAME="OP TCG PH Escrow"

# Platform fee (percentage, e.g. 0.03 = 3%)
PLATFORM_FEE_PERCENT=0.03

# Optional: Payment Gateway (for automated escrow — PayMongo/Xendit)
# PAYMONGO_SECRET_KEY=sk_live_...
# PAYMONGO_PUBLIC_KEY=pk_live_...
# XENDIT_SECRET_KEY=xnd_production_...

# Optional: Twilio for SMS OTP
# TWILIO_ACCOUNT_SID=...
# TWILIO_AUTH_TOKEN=...
# TWILIO_PHONE_NUMBER=+1...

# Optional: Resend for transactional email
# RESEND_API_KEY=re_...
# EMAIL_FROM="OP TCG PH <noreply@yourdomain.com>"

# Security
CRON_SECRET=your-random-cron-secret
ADMIN_EMAILS=admin@yourdomain.com
